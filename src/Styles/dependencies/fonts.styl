@font-face {
  font-family: 'Lato';
  src:url('./Assets/fonts/lato-regular-webfont.woff2') format('woff2');
  font-weight: normal;
  font-style: normal;
}

@font-face {
  font-family: 'LatoBlack';
  src:url('./Assets/fonts/lato-black-webfont.woff2') format('woff2');
  font-weight: normal;
  font-style: normal;
}

@font-face {
  font-family: 'zeldaFont';
  src:url('./Assets/fonts/pressstart2p-webfont.woff2') format('woff2');
  font-weight: normal;
  font-style: normal;
}

////////////////////////////////////////
//      Font-Family Definitions       //
////////////////////////////////////////

$lato--regular= 'Lato', 'Helvetica Neue', 'Helvetica', Helvetica, Arial, sans-serif;
$lato--black= 'LatoBlack', 'Helvetica Neue', 'Helvetica', Helvetica, Arial, sans-serif;

///////////////////////////////
//      Font Variables       //
///////////////////////////////
$display-font= $lato--regular;
$display-font--bold= $lato--black;
$body-font= $lato--regular;

////////////////////////////
//      Font Mixins       //
////////////////////////////
.displayFont {
  font-family : $display-font;
}

.displayFontBold {
  font-family : $display-font--bold;
}

.bodyFont {
  font-family : $body-font;
}
