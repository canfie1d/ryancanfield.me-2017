.display__menu__wrapper {
    flexContainer();
    position : absolute;
    top      : 0;
    right    : 0;
    bottom   : 0;
    left     : 0;
    width    : 100%;
}

.display__menu {
    flexContainer();
    justify-content: space-around;
    flexItem(1, 1, auto);
    transform  : translateY(-100%);
    transition : transform 300ms $ease-in-out-quint 100ms;
    z-index    : 1;
    overflow-y  : auto;
    background  : $white;
    padding  : rem(10);

    &.display__menu--active {
        transform : translateY(0);
    }
}

.display__menu__item {
  @extend .displayFont;
  styledAnchor(rem(24), $projectsColor, $white);
  flexItem(1, 1, auto);
  padding : rem(20);
  cursor  : pointer;
}
