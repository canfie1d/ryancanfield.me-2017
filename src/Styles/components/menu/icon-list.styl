.icon-list {
  flexContainer();
  justify-content: space-between;
}

.icon-list__item {
  flexItem(0, 1, 80%);
  position: relative;
  padding: 0 10%;
  margin-bottom: rem(70);
  text-align: center;

  &:hover {
    .icon-list__tooltip {
      transform: scaleY(1) translateX(-50%);
      opacity: 1;
    }
  }

  +min-screen($media-small) {
    flexItem(0, 1, 50%);
    padding: 0;
  }

  +min-screen($media-medium) {
    flexItem(0, 1, 33%);
  }

  .icon-list__image {
    box-sizing: border-box;
    width: 100%;
    display: block;
    padding: 0 rem(50 10);
    cursor: alias;

    .image--logo {
      width: 100%;
      max-width: 100%;
    }
  }

}

.icon-list__icon {
  flexContainer();
  z-index: 1;

  .icon {
    margin: auto;

    svg {
      max-width: 100%;
    }
  }
}

.icon-list__tooltip {
  display: block;
  position: absolute;
  top: 100%;
  left: 50%;
  @extend .bodyFont;
  font-size : rem(16);
  color: $white;
  width: 100%;
  text-align: center;
  transform: scaleY(0) translateX(-50%);
  opacity: 0;
  transition: transform 200ms $ease-in-out-quint,
              opacity 200ms ease;
  transform-origin: top;
}
